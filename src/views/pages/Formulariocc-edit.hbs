            <div class="fullwidth-block greet-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 mx-auto cf-container">
                            <form action="/pages/Formulariocc-edit/{{#each userFound}}{{_id}}{{/each}}?_method=PUT"
                                class="cuadro_REA" method="POST">
                                <input type="hidden" name="_method" value="PUT" />
