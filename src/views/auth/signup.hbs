<div id="site-content">

  <header class="site-header">
    <div class="top-header">
      <div class="container">

      </div> <!-- .contenedor del titulo y el logo -->
    </div> <!-- termina el encabezado que contiene el fondo -->

  </header> <!-- header -->

  <main class="main-content">
    <div class="breadcrumbs">
      <div class="container">
        <a href="index.html">Inicio</a>
        <span>Registro de nuevos usuarios</span>
      </div>
    </div>

    <div class="page">
      <div class="container">
        <div class="row">
          <div class="col-md-4 mx-auto">
            <div class="card bg-black text-white">
              <div class="card-header pt-5">
                <h4 class="text-center">
                  Crear cuenta
                </h4>
              </div>
              <div class="card-body">
                <form action="/auth/signup" method="POST">
                  <div class="mb-3">
                    <label for="name">Nombre:</label>
                    <input type="text" class="form-control bg-dark text-white" name="name" placeholder="Nombre"
                      value="{{name}}" />
                  </div>
                  <div class="mb-3">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control bg-dark text-white" name="email" placeholder="Email"
                      value="{{email}}" />
                  </div>
                  <div class="mb-3">
                    <label for="password">Tipo</label>
                    <select name="tipo" class="form-control bg-dark text-white" required="" placeholder="Seleccione">
                      <option value="value1">Seleccionar</option>
                      <option value="estudiante">Estudiante</option>
                      <option value="docente">Docente</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="password">Grado</label>
                    <select name="grado" class="form-control bg-dark text-white" required="" placeholder="Seleccione">
                      <option value="value1">Seleccionar</option>
                      <option value="cuartoEGB">Cuarto Grado</option>
                      <option value="quintoEGB">Quinto Grado</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="password">Paralelo</label>
                    <select name="paralelo" class="form-control bg-dark text-white" required=""
                      placeholder="Seleccione">
                      <option value="value1">Seleccionar</option>
                      <option value="A">A</option>
                      <option value="B">B</option>
                      <option value="C">C</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control bg-dark text-white" name="password"
                      placeholder="Contraseña" value="{{password}}" />
                  </div>
                  <div class="mb-3">
                    <label for="confirm_password">Cofirmar contraseña:</label>
                    <input type="password" class="form-control bg-dark text-white" name="confirm_password"
                      placeholder="Confirmar contraseña" value="{{confirm_password}}" />
                  </div>
                  <button class="btn btn-success btn-block">
                    registrar
                  </button>
                </form>
              </div>
              <p class="text-center">ya tienes una cuenta?
                <a href="/" class="text-info">iniciar sesión</a>
              </p>
            </div>
          </div>
        </div>